{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/api/v1/chapters": {
            "get": {
                "description": "Get a list of all 18 chapters with their metadata",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Chapters"
                ],
                "summary": "List All Chapters",
                "responses": {
                    "200": {
                        "description": "chapters: array of chapter objects",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/chapters/{chapter}": {
            "get": {
                "description": "Get chapter metadata along with all its verses",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Chapters"
                ],
                "summary": "Get Chapter with Verses",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Chapter number (1-18)",
                        "name": "chapter",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "chapter: chapter object, verses: array of verse objects",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "error: invalid chapter number",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "error: not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/chapters/{chapter}/verses": {
            "get": {
                "description": "Get all verses for a specific chapter",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Verses"
                ],
                "summary": "List Chapter Verses",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Chapter number (1-18)",
                        "name": "chapter",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "chapter: chapter number, verses: array of verse objects",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "error: invalid chapter number",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "error: not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/chapters/{chapter}/verses/{verse}": {
            "get": {
                "description": "Get a specific verse with all its translations",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Verses"
                ],
                "summary": "Get Specific Verse",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Chapter number (1-18)",
                        "name": "chapter",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Verse number within the chapter",
                        "name": "verse",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "verse object with all translations",
                        "schema": {
                            "$ref": "#/definitions/data.Verse"
                        }
                    },
                    "400": {
                        "description": "error: invalid chapter or verse number",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "error: not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/random": {
            "get": {
                "description": "Get a randomly selected verse from the Bhagavad Gita",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Random"
                ],
                "summary": "Get Random Verse",
                "responses": {
                    "200": {
                        "description": "random verse object with all translations",
                        "schema": {
                            "$ref": "#/definitions/data.Verse"
                        }
                    },
                    "404": {
                        "description": "error: not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/search": {
            "get": {
                "description": "Search verses by keyword in English or Hindi",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Search"
                ],
                "summary": "Search Verses",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Search query (minimum 2 characters)",
                        "name": "query",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "default": "en",
                        "description": "Language for search (en or hi)",
                        "name": "lang",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 20,
                        "description": "Maximum number of results (1-100)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "results: array of verse objects",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "error: invalid search parameters",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "error: internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/healthz": {
            "get": {
                "description": "Check the health status of the API service",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "System"
                ],
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "status: ok, timestamp: UTC datetime",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "503": {
                        "description": "status: unhealthy, error: description",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "data.Verse": {
            "type": "object",
            "properties": {
                "chapter_id": {
                    "type": "integer"
                },
                "english": {
                    "type": "string"
                },
                "hindi": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "sanskrit": {
                    "type": "string"
                },
                "transliteration": {
                    "type": "string"
                },
                "verse_number": {
                    "type": "integer"
                }
            }
        }
    }
}